@model IEnumerable<POS_Service.Models.CustomerData>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FnNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeliveried)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FnNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDeliveried)
        </td>
        <td>
            @Html.ActionLink("Show Details", "Details", new { guid=item.guid })
        </td>
    </tr>
}
</table>

<div class="form-group">
    @using (Html.BeginForm("ClearDelivery", "Controller"))
    {
        <input type="submit" value="Clear all deliveried" class="btn btn-primary"/>
    }
</div>