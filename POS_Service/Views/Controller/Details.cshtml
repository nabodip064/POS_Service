@model POS_Service.ViewModels.ControllerCustomer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>

<div class="form-group">
    <center>
        <h4>Customer Name: @Model.customerdata.Name</h4>
        <h4>Customer Address: @Model.customerdata.Address</h4>
        <h4>Customer Mobile number: @Model.customerdata.FnNumber</h4>
        <h4>Customer Type: @Model.customerdata.CustomerType</h4>
        <h4>Customer delivery status: @Model.customerdata.IsDeliveried</h4>
    </center>
</div>
<div class="form-group">
    <table class="table">
        <tr>
            <th>
                <p>Product Name</p>
            </th>
            <th>
                <p>Product Price</p>
            </th>
            <th>
                <p>Product Quantity</p>
            </th>
        </tr>

        @foreach (var item in Model.choseList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantity)
                </td>
            </tr>
        }
    </table>
</div>

<br/>
<div>
    @using (Html.BeginForm("CompleteDelivery", "Controller", new { id = Model.customerdata.Id }))
    {
        <input type="submit" value="Complete Delivery" class="btn btn-primary"/>
    }
</div>
